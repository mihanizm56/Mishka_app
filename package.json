{
  "name": "custom_template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {},
  "scripts": {
    "client": "cd client && npm run start",
    "server": "cd server && npm run start",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd client && npm run lint && cd .. && cd server && npm run lint"
    }
  }
}